{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 22",
  "_version": "22.4.0",
  "exclude": ["node_modules", "build", "test"],
  "type": "module",
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ESNext",
    "lib": [ "ESNext" ] ,  
    "moduleDetection": "force",
    "outDir": "build",
    "esModuleInterop": true,
    "types": ["node", "jest"],
  },
  "include": ["src/**/*", "test/tsofa.test.ts"]
}
